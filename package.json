{
  "name": "pathket",
  "version": "1.0.0",
  "private": true,
  "description": "Pathket - Career Exploration Gaming Platform",
  "author": "Pathfinity",
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:mobile": "npm run dev --workspace=packages/mobile",
    "build": "npm run build --workspace=packages/web",
    "build:web": "npm run build --workspace=packages/web",
    "build:shared": "npm run build --workspace=packages/shared",
    "test": "npm run test --workspaces --if-present",
    "test:web": "npm run test --workspace=packages/web",
    "test:shared": "npm run test --workspace=packages/shared",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "husky": "^8.0.3",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
